	</view>
	<view class="settle-box">
		<view class="left-price">
			<view class="total">实付：</view>
			<view class="pay-money">¥ {{actualPrice}}</view>
		</view>
		<button  class="to-pay-btn" bindtap='submitOrder'>提交订单</button>
	</view>
</view>